
<% if @user.errors.any? %>
  <div class="alert alert-danger mb-4">
    <h5><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h5>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


        <%= form_with(model: @user, class: "shadow p-4 mb-4 custom-form-bg rounded", local: true, data: { turbo: false }) do |f| %>


          <div class="mb-3">
            <%= f.label :username, class: "form-label text-light" %>
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label text-light" %>
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label text-light" %>
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>

          <div class="d-grid gap-2 mt-4">
            <%#
              生成一个提交按钮，根据用户是否为新记录显示不同的文本。
              如果用户是新记录（即 `@user.new_record?` 为 true），按钮文本为 "Sign up"；
              否则，按钮文本为 "Update account"。
              按钮的样式类为 "btn btn-outline-light btn-lg"，用于定义按钮的外观。
            %>
            <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
          </div>
        <% end %>

        <div class="mb-3 text-center">
          <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
        </div>

